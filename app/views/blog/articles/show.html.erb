<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel panel-heading centre" style="font-family: 'Coming Soon', cursive;">
        <%= @article.title %><hr/>

        <div>
          <%= @article.text %><hr/>
        </div>

        <div>
        <%= image_tag @article.image.url(:medium) %><br/>
        </div>
      </div>

      <% if admin? %>
        <div style="font-family: 'Coming Soon', cursive;">
          <%= link_to 'Edit', edit_blog_article_path(@article) %>
        </div>
      <% end %>

      <%= link_to 'Back', blog_articles_path %>
    </div>
  </div>
</div>
